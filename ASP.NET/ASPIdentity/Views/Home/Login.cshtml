@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<main class='container center-container p-3 mx-3'>
    <h2 class='text-center fw-bolder mb-5'>Login 👉</h2>

    <form method='post'>
        <div asp-validation-summary='All' class='text-white bg-danger rounded'></div>

        <div class='mb-3'>
            <label class='form-label' asp-for=@Model.Email></label>
            <input type='email' class='form-control' asp-for=@Model.Email />
            <span class='text-danger' asp-validation-for=@Model.Email></span>
        </div>

        <div class='mb-3'>
            <label class='form-label' asp-for=@Model.Password></label>
            <input type='password' class='form-control' asp-for=@Model.Password />
            <span class='text-danger' asp-validation-for=@Model.Password></span>
        </div>

        <div class='mb-3 form-check'>
            <label class='form-label form-check-label' asp-for=@Model.RememberMe></label>
            <input type='checkbox' class='form-check-input' asp-for=@Model.RememberMe />
        </div>

        <div class='mb-5'>
            Not yet registered? <a asp-action="Register">Register</a>
        </div>

        <div class='text-center'>
            <button type='submit' class='btn btn-primary'>Submit</button>
        </div>
    </form>
</main>
